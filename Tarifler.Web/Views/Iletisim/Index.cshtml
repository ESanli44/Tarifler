@model IletisimViewModel

@{
    if (TempData["Durum"] != null)
    {

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <h4 class="text-center my-3">@TempData["Durum"]</h4>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

}

<div class="text-center">
    <h1 class="display-4">İletişim</h1>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" asp-controller="Iletisim">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MesajAciklama" class="control-label"></label>
                <textarea asp-for="MesajAciklama" class="form-control"></textarea>
                <span asp-validation-for="MesajAciklama" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h5>Bize Ulaşın</h5>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d100131.73197204008!2d38.26084668326243!3d38.34628266391353!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x407636ac4d08e30f%3A0x79c86f18a4f266cd!2zU2FuYXQgU29rYcSfxLE!5e0!3m2!1str!2str!4v1732538784778!5m2!1str!2str"
                width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>