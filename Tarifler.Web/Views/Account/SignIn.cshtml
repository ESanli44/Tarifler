@model LoginViewModel

<div class="container  w-50 m-auto shadow rounded my-5">
    <form asp-controller="Account" asp-action="SignIn" method="post">
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />

        <h1 class="text-center">Giriş</h1>
        <input asp-for="ReturnUrl" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="UserEmail" class="form-control" placeholder="name@example.com">
            <label asp-for ="UserEmail">Email address</label>
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>
        <br />
        <div class="form-floating">
            <input asp-for="UserPassword" class="form-control" placeholder="Password">
            <label asp-for="UserPassword">Password</label>
            <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>

        <button class="btn btn-primary w-100 py-2 my-4" type="submit">Sign in</button>
        
    </form>
</div>

