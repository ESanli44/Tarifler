@model User

@if(ViewBag.basarili != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h4>@ViewBag.basarili</h4>
        <button type="button" class="btn-close" data-bs-dismiss="success" aria-label="Close"></button>
    </div>
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-12 col-xl-4">

                <div class="card" style="border-radius: 15px;">
                    <div class="card-body text-center">
                        <div class="mt-3 mb-4">
                            <img src="~/img/userPhoto.jpg" class="rounded-circle img-fluid" style="width: 200px;" />
                        </div>
                        <h4 class="mb-2">@Model.FirstName - @Model.LastName</h4>
                        <p class="text-muted mb-4">
                            Role : @TempData["Role"] <span class="mx-2">|</span> @Model.UserEmail
                        </p>
                       
                        <div>
                            @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Member"))
                            {
                                <a href="/Profil/Yemeklerim" type="button" class="btn btn-outline-primary btn-rounded btn-lg">
                                    Yemeklerim
                                </a>
                            }
                            
                            <a href="/Profil/Begenilenler" type="button" class="btn btn-outline-primary btn-rounded btn-lg">
                                Beğenilenler
                            </a>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between text-center mt-5 mb-2">
                            <div>
                                <p class="mb-2 h5">@Model.YemekTarifleri.Count</p>
                                <p class="text-muted mb-0">Tarif Sayısı</p>
                            </div>
                            <div class="px-3">
                                <p class="mb-2 h5">@Model.Begeniler.Count</p>
                                <p class="text-muted mb-0">Beğeniler</p>
                            </div>
                            <div>
                                <a href="/Profil/SifreGuncelle"><p class="text-muted mb-0 h6">Şifre Değiştir</p></a>
                               <hr />
                                <a href="/Profil/Bilgilerim"><p class="text-muted mb-0 h6">Bilgilerim</p></a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>