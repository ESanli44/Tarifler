@model IEnumerable<YemekTarif>



<div class="row justify-content-center text-aling-center">
    <div class="col-9">
        <h4 class="text-center"> Yemek Tariflerim </h4>
        <hr />

        <div class="my-3">
            <a href="/Profil/Create">Ekle</a>
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-dark  justify-content-center text-aling-center text-center">
                <tr>
                    <th scope="col">Resim</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Yemek Türü</th>
                    <th scope="col">Yemek Kategorisi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class=" justify-content-center text-aling-center text-center">
                @foreach (var kullanici in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/Tarif/@kullanici.Resim" style="height:50px;width:50px;">
                        </td>
                        <td> <a href="/Profil/Details/@kullanici.TarifId">@kullanici.Baslik</a> </td>
                        <td>@kullanici.Tur.TurAdi</td>
                        <td>@kullanici.Kategori.KategoriAdi</td>
                        <td><a href="/Profil/Edit/@kullanici.TarifId">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
