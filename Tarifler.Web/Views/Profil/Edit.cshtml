@model tarifUptadateViewModel


@{
    ViewData["Title"] = "Edit";
}


<h4 class="text-center">Tarif Güncelle</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TarifId" />
            <input type="hidden" asp-for="Resim" />

            <div class="form-group">
                <label asp-for="Baslik" class="control-label"></label>
                <input asp-for="Baslik" class="form-control" />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sure" class="control-label"></label>
                <input asp-for="Sure" class="form-control" />
                <span asp-validation-for="Sure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kisiSayisi" class="control-label"></label>
                <input asp-for="kisiSayisi" class="form-control" />
                <span asp-validation-for="kisiSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Malzeme" class="control-label"></label>
                <input asp-for="Malzeme" class="form-control" />
                <span asp-validation-for="Malzeme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control" type="file" />
                <span asp-validation-for="Resim" class="text-danger"></span>

                @if (Model.Resim != null && !string.IsNullOrWhiteSpace(Model.Resim))
                {
                    <img class="mt-2" src="/img/Tarif/@Model.Resim" height="100px" />
                }
            </div>
            <div class="form-group">
                <label asp-for="TarifAciklama" class="control-label"></label>
                <input asp-for="TarifAciklama" class="form-control" />
                <span asp-validation-for="TarifAciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriId" class="control-label"></label>
                <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId"></select>
                <span asp-validation-for="KategoriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurId" class="control-label"></label>
                <select asp-for="TurId" class="form-control" asp-items="ViewBag.TurId"></select>
                <span asp-validation-for="TurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


