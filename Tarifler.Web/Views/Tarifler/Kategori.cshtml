@model KategoriViewvModel



<div class="row my-5">
    @foreach(var item in Model.Kategoriler)
    {
        <div class="col">
            <a href="/Tarifler/Kategori/@item.KategoriId" class="btn btn-outline-secondary"> @item.KategoriAdi </a>
        </div>
    }
    <div class="col">
        <a href="/Tarifler/Kategori/0" class="btn btn-outline-secondary"> Hepsi</a>
    </div>

</div>
<hr />

@if (TempData["Ara"] == "")
{ 
    <div class="row">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Yemekler)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <div>
                                <a href="/Tarifler/Detay/@item.TarifId">
                                    <img src="~/img/Tarif/@item.Resim" alt="Alternate Text" style="width:420px; height:300px;" />
                                </a>
                            </div>

                            <div class="card-body">
                                <p class="card-text">@item.Baslik</p>
                                <hr />

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-body-secondary">@item.User.UserName</small>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Beğen</button>
                                    </div>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between text-center mb-2">
                                    <div>
                                        <p class="mb-2 h5">8471</p>
                                        <p class="text-muted mb-0">Yorum</p>
                                    </div>
                                    <div class="px-3">
                                        <p class="mb-2 h5">8512</p>
                                        <p class="text-muted mb-0">Beğeniler</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>

    </div>
    
}
else
{
    <div class="row">
        @Html.Partial("_Kart", TempData["Ara"])
    </div>
}

