@model IEnumerable<Tarifler.Core.Entity.Mesaj>

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-center">Mesaj Yönetimi</h4>
<hr />

<p>
    <a asp-action="Create">Mesaj Gönder</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MesajAciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MesajAciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MesajId">Güncelle</a> |
                <a asp-action="Details" asp-route-id="@item.MesajId">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.MesajId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
