@model IEnumerable<YemekTarif>

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-center">Yemek Tarif Listesi</h4>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-patch-plus"></i>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/img/Tarif/@item.Resim" style="height:50px;width:50px;">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur.TurAdi)
            </td>
            <td>

                    <a asp-action="Edit" asp-route-id="@item.TarifId" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.TarifId" class="btn btn-warning">
                        <i class="bi bi-search"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.TarifId" class="btn btn-warning">
                        <i class="bi bi-trash3"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
