@model IEnumerable<Tarifler.Core.Entity.Slider>

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-center">Slider Yönetim Sayfası</h4>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-patch-plus"></i>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resim)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resim)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.SliderId" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.SliderId" class="btn btn-warning">
                        <i class="bi bi-search"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.SliderId" class="btn btn-warning">
                        <i class="bi bi-trash3"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
